<article id="user">
  <header>
    <h1><%= @user.username %></h1>
    <p>Member Since: <%= @user.created_at.strftime("%B %Y")%></p>
    <h2><%= mail_to(@user.email) %></h2>
    <h2>Name: <%= @user.name %></h2>
  </header>

  <footer>
    <nav>
      <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
      <%= link_to 'Delete Account', @user, method: :delete, data: { confirm: "Are you sure you want to delete your account?"}, class: 'button' %>
    </nav>
  </footer>

</article>
